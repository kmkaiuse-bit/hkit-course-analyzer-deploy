{
  "name": "advanced-standing-tool",
  "version": "1.0.0",
  "description": "HKIT Course Analyzer and Advanced Standing Tool",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/unit/api",
    "test:frontend": "jest tests/unit/frontend",
    "test:integration": "jest tests/integration",
    "server": "node server/learning-server.js",
    "dev": "node server/learning-server.js",
    "start": "node server/learning-server.js",
    "db:setup": "node scripts/setup-sqlite.js",
    "db:test": "node scripts/test-sqlite.js",
    "db:backup": "node scripts/backup-sqlite.js",
    "db:migrate": "node db/migrations/migrate_postgres_to_sqlite.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "node-mocks-http": "^1.14.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "projects": [
      {
        "displayName": "API Tests",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/tests/unit/api/**/*.test.js",
          "<rootDir>/tests/integration/**/*.test.js"
        ]
      },
      {
        "displayName": "Frontend Tests",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/tests/unit/frontend/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>/tests/setup.js"
        ]
      }
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "local/**/*.js",
      "!**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
